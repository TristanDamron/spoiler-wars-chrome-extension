{
  "manifest_version": 2,

  "name": "Spoiler Wars",
  "description": "Warns internet users of potential spoilers to the movie Star Wars Episode VII: The Force Awakens.",
  "version": "1.0",
  "permissions": [
      "activeTab"
  ],

  "content_scripts": [
      {
	  "matches": ["http://*/*"],
	  "css": ["main.css"],	  
	  "js": ["spoilers.js"]
      }
  ],

  "background": {
      "scripts": ["action.js"],
      "persistent": false
  },

  "browser_action": {
      "default_icon": "img/logo.png",
      "default_title": "Check for spoilers."
  },

  "web_accessible_resources": [ "img/ackbar.jpeg" ]
}
